<UserControl x:Class="MDK.Views.FolderBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDK.Views"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    <DockPanel>
        <Button DockPanel.Dock="Right" Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" Margin="2,0,0,0" Click="OnBrowseButtonClicked">...</Button>
        <TextBox x:Name="OutputPathTextBox" IsReadOnly="True" ToolTip="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=ToolTip}" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=SelectedFolder}" />
    </DockPanel>
</UserControl>
